{
  "name": "@pkm/ui",
  "version": "1.0.0",
  "description": "UI primitives built with webcomponents",
  "module": "./dist/index.bundled.js",
  "scripts": {
    "build": "rollup -c --file dist/index.bundled.js",
    "preview:build": "tsc --project=tsconfig.json",
    "preview:build:watch": "tsc --project=tsconfig.json --watch",
    "preview:serve": "wds --root-dir ./preview --watch",
    "clean": "rimraf my-element.{d.ts,d.ts.map,js,js.map} test/my-element.{d.ts,d.ts.map,js,js.map} test/my-element_test.{d.ts,d.ts.map,js,js.map}",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint:lit-analyzer": "lit-analyzer",
    "analyze": "cem analyze --litelement --globs \"src/**/*.ts\"",
    "test": "wtr",
    "test:watch": "wtr --watch"
  },
  "dependencies": {
    "lit": "^2.0.0"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.5.3",
    "@esm-bundle/chai": "^4.1.5",
    "@open-wc/testing": "^3.0.3",
    "@open-wc/testing-karma": "^4.0.9",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^3.0.1",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/mocha": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.30.0",
    "@web/dev-server": "^0.1.22",
    "@web/dev-server-legacy": "^0.1.4",
    "@web/dev-server-rollup": "^0.3.9",
    "@web/test-runner": "^0.13.16",
    "@web/test-runner-mocha": "^0.7.4",
    "@web/test-runner-playwright": "^0.8.4",
    "@webcomponents/webcomponentsjs": "^2.6.0",
    "eslint": "^7.32.0",
    "lit-analyzer": "^1.1.10",
    "mocha": "^9.1.1",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.63.0",
    "rollup-plugin-summary": "^1.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.3.5",
    "vite": "^2.7.10"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stefan-wullems/workspace.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stefan-wullems/workspace/issues"
  },
  "homepage": "https://github.com/stefan-wullems/workspace#readme",
  "customElements": "custom-elements.json"
}